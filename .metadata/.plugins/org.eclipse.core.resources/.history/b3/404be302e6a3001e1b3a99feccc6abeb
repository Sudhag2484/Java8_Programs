package in.sudha.array;

import java.util.Arrays;

public class TripletsWithSum {
	public static void main(String[] args) {
        int[] input = {7, 5, 9, 3, 1, 8, 6};
        int targetSum = 12;

        findTripletsWithSum(input, targetSum);
    }

    private static void findTripletsWithSum(int[] arr, int targetSum) {
        Arrays.sort(arr);

        for (int i = 0; i < arr.length - 2; i++) {
            int left = i + 1;
            int right = arr.length - 1;

            while (left < right) {
                int currentSum = arr[i] + arr[left] + arr[right];

                if (currentSum == targetSum) {
                    System.out.println("Triplet found: " + arr[i] + ", " + arr[left] + ", " + arr[right]);
                    left++;
                    right--;
                } else if (currentSum < targetSum) {
                    left++;
                } else {
                    right--;
                }
            }
        }
    }
}
